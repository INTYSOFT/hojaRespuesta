<Window x:Class="HojaRespuesta.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Corrección automática OMR" Height="720" Width="1200">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" Spacing="10">
            <Button Content="Cargar PDF" Width="120" Click="OnLoadPdfClicked"/>
            <Button Content="Procesar OMR" Width="120" Click="OnProcessOmrClicked"/>
            <Button Content="Exportar CSV" Width="120" Click="OnExportCsvClicked"/>
            <TextBlock Text="{Binding StatusMessage}" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <DataGrid ItemsSource="{Binding PageSummaries}"
                      SelectedItem="{Binding SelectedPage, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Margin="0,0,10,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Página" Binding="{Binding PageNumber}" Width="*"/>
                    <DataGridTextColumn Header="DNI" Binding="{Binding Dni}" Width="2*"/>
                    <DataGridTextColumn Header="# Preguntas" Binding="{Binding AnswerCount}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="1" BorderBrush="Gray" Margin="0,0,0,10">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Image Source="{Binding SelectedPageImage}" Stretch="Uniform"/>
                    </ScrollViewer>
                </Border>
                <DataGrid Grid.Row="1" ItemsSource="{Binding SelectedAnswers}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Pregunta" Binding="{Binding QuestionNumber}" Width="*"/>
                        <DataGridTextColumn Header="Respuesta" Binding="{Binding SelectedOption}" Width="*"/>
                        <DataGridTextColumn Header="Confianza" Binding="{Binding Confidence, StringFormat=F2}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
